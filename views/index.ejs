<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/header.ejs") %>
  <body>
    <%- include("./partials/navbar.ejs") %>

    <h1>HomePage</h1>
    <p>This is the homepage</p>

    <% if (notes.length > 0) {%>
    <ul>
      <% notes.forEach(note => { %>
      <a href="/notes/<%= note.id %>">
        <li>
          <h4><%= note.title %></h4>
          <p><%= note.content %></p>
        </li>
      </a>
      <% }) %>
    </ul>
    <% } else { %>
    <a href="/create">New Note</a>
    <% } %>
  </body>
</html>
